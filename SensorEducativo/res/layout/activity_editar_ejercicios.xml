<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.edu.uvg.besser.EditarEjercicios"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/editarEjercicios"
            android:layout_width="match_parent"
            android:layout_height="89dp" >
        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/botonEliminarEjercicio"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="eliminar"
                android:text="Eliminar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewDia1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instruccion" />

            <EditText
                android:id="@+id/instruccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" >

                
            </EditText>

        </LinearLayout>
		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewDia1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respuesta" />

            <EditText
                android:id="@+id/respuesta1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" >

                
            </EditText>

            <CheckBox
                android:id="@+id/validez1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verdadero" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewDia1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respuesta" />

            <EditText
                android:id="@+id/respuesta2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" >

                
            </EditText>

            <CheckBox
                android:id="@+id/validez2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verdadero" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewDia1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respuesta" />

            <EditText
                android:id="@+id/respuesta3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" >

                
            </EditText>

            <CheckBox
                android:id="@+id/validez3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verdadero" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewDia1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respuesta" />

            <EditText
                android:id="@+id/respuesta4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" >

                
            </EditText>

            <CheckBox
                android:id="@+id/validez4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verdadero" />

        </LinearLayout>
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewDia1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puntuacion" />

            <EditText
                android:id="@+id/puntuacion"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned" >

            </EditText>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp" >

            <Button
                android:id="@+id/agregar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:onClick="agregar"
                android:text="Agregar" />

        </RelativeLayout>
	</LinearLayout>
</FrameLayout>

